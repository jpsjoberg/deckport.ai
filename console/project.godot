config_version=5

[application]

config/name="Deckport Console"
config/description="Deckport Trading Card Game Console"
run/main_scene="res://simple_boot.tscn"
config/features=PackedStringArray("4.2", "GL Compatibility")
boot_splash/bg_color=Color(0, 0, 0, 1)
# boot_splash/image="res://assets/logos/boot_splash.png"  # Optional - uses default if missing
boot_splash/fullsize=false
boot_splash/use_filter=false
# config/icon="res://assets/logos/deckport_logo.png"  # Optional - uses default if missing

[gui]

theme/custom="res://console_theme.tres"

[autoload]

# Core managers for the battle system
ArenaManager="*res://arena_manager.gd"
ResourceManager="*res://resource_manager.gd"
CardAbilitiesCatalog="*res://card_abilities_catalog.gd"
CardDisplayManager="*res://card_display_manager.gd"
VideoBackgroundManager="*res://video_background_manager.gd"
ArenaVideoManager="*res://arena_video_manager.gd"
VideoStreamManager="*res://video_stream_manager.gd"
TurnTimerManager="*res://turn_timer_manager.gd"

# Existing managers
DeviceConnectionManager="*res://device_connection_manager.gd"
PlayerSessionManager="*res://player_session_manager.gd"
GameStateManager="*res://game_state_manager.gd"
NetworkClient="*res://scripts/NetworkClient.gd"

# Console hardware managers
BatteryManager="*res://battery_manager.gd"

[display]

window/size/viewport_width=1920
window/size/viewport_height=1080
window/size/mode=4
window/size/borderless=true
window/size/always_on_top=false
window/size/initial_position_type=0

